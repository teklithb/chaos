<h1>Welcome</h1>

<%= form_with url: posts_path, method: :get, local: true do |form| %>
  <%= form.text_field :query, value: params[:query], placeholder: "Search posts" %>
  <%= form.submit "Search" %>
<% end %>

<% @posts.each do |post| %>
  <div>
    <h3><%= link_to post.title, post %></h3>
    <p><%= post.content %></p>
    <%= link_to 'Edit', edit_post_path(post), class: "btn btn-primary" %>
    <%= button_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }, form: {class: "inline"}, class: "btn btn-danger" %>
  </div>
<% end %>

<%= button_to 'Add content', new_post_path, method: :get, class: "btn btn-primary" %>

<!-- Adding the button for Elasticsearch -->
<%= button_to 'Elasticsearch', 'http://localhost:9200/', method: :get, class: "btn btn-secondary" %>

<!-- Adding the button for User Management -->
<%= button_to 'User Manage', 'http://localhost:8080/', method: :get, class: "btn btn-secondary" %>
