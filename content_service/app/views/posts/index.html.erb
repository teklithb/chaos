<!DOCTYPE html>
<html>
<head>
  <title>Content Service</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <!-- Ensure you have the bootstrap CSS linked here, either from a CDN or your assets -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>

<div class="container mt-5">
  <h1 class="text-center mb-4">Welcome</h1>

  <%= form_with url: posts_path, method: :get, local: true, class: "form-inline justify-content-center mb-4" do |form| %>
    <%= form.text_field :query, value: params[:query], placeholder: "Search posts", class: "form-control mr-2" %>
    <%= form.submit "Search", class: "btn btn-outline-success" %>
  <% end %>

  <% @posts.each do |post| %>
    <div class="card mb-3">
      <div class="card-body">
        <h3 class="card-title">
          <%= link_to post.title, post, class: "text-dark" %>
        </h3>
        <p class="card-text"><%= post.body %></p> 
        <div class="d-flex justify-content-between">
          <%= link_to 'Edit', edit_post_path(post), class: "btn btn-primary" %>
          <%= button_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to 'Add Content', new_post_path, class: "btn btn-primary btn-lg" %>
  </div>

  <div class="text-center mt-4">
    <%= link_to 'User Manage', 'http://localhost:8080/', class: "btn btn-secondary btn-lg" %>
  </div>

  <div class="text-center mt-4">
  <%= link_to 'Medea service', 'http://localhost:3002/upload', class: "btn btn-secondary btn-lg" %>
</div>

<div class="text-center mt-4">
<%= link_to 'analytics-service', 'http://localhost:8000/', class: "btn btn-secondary btn-lg" %>
</div>


<div class="text-center mt-4">
<%= link_to 'monitering ', 'http://localhost:3005/d/-mv7KBxIk/prometheus-2-0-stats?orgId=1&refresh=1m
', class: "btn btn-secondary btn-lg" %>
</div>
</div>

</body>
</html>
